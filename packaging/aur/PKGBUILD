# Maintainer: hyperpuncher
pkgname=chough
pkgver=0.1.0
pkgrel=1
pkgdesc="Fast ASR CLI using Parakeet TDT 0.6b V3"
arch=('x86_64' 'aarch64')
url="https://github.com/hyperpuncher/chough"
license=('MIT')
depends=('ffmpeg')
makedepends=('go')
source=("$pkgname-$pkgver.tar.gz::https://github.com/hyperpuncher/chough/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
    cd "$pkgname-$pkgver"
    export CGO_ENABLED=1
    go build -ldflags="-s -w -X main.version=v$pkgver" -o chough ./cmd/chough
}

package() {
    cd "$pkgname-$pkgver"
    install -Dm755 chough "$pkgdir/usr/bin/chough"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE" 2>/dev/null || true
}
